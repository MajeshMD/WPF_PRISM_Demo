                                Background="LightBlue"
                                BorderBrush="{x:Null}"
                                BorderThickness="0"
                                CornerRadius="0"
                                Visibility="Collapsed" />
                        <Border x:Name="IsExpandedState"
                                Background="#ff0d354c"
                                BorderBrush="{x:Null}"
                                BorderThickness="0"
                                CornerRadius="0"
