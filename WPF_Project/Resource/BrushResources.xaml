                                BorderThickness="0"
                                CornerRadius="0" />
                        <Border x:Name="MouseOverBorder"
                                Background="LightBlue"
                                BorderBrush="{x:Null}"
                                BorderThickness="0"
                                CornerRadius="0"
                                Visibility="Collapsed" />
